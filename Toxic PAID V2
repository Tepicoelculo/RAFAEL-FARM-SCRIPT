    ]==])()
end)

-- =========================
-- üîπ Auto Jungle Bar Lift
-- =========================
local jungleBarLiftToggle = false
AutoFarm:AddSwitch("Auto Jungle Bar Lift", function(state)
    jungleBarLiftToggle = state
    if state then
        task.spawn(function()
            local player = game.Players.LocalPlayer
            local char = player.Character or player.CharacterAdded:Wait()
            local hrp = char:WaitForChild("HumanoidRootPart")
            while jungleBarLiftToggle do
                hrp.CFrame = CFrame.new(-8678.05566, 14.5030098, 2089.25977)
                task.wait(1)
            end
        end)
    end
end)

-- =========================
-- üîπ Auto Jungle Squat
-- =========================
local jungleSquatToggle = false
AutoFarm:AddSwitch("Auto Jungle Squat", function(state)
    jungleSquatToggle = state
    if state then
        task.spawn(function()
            local player = game.Players.LocalPlayer
            local char = player.Character or player.CharacterAdded:Wait()
            local hrp = char:WaitForChild("HumanoidRootPart")
            while jungleSquatToggle do
                hrp.CFrame = CFrame.new(-8374.25586, 34.5933418, 2932.44995)
                task.wait(1)
            end
        end)
    end
end)
